{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nombre_completo</th>
                <td>{{ user.nombreCompleto }}</td>
            </tr>
            <tr>
                <th>Apodo</th>
                <td>{{ user.apodo }}</td>
            </tr>
            <tr>
                <th>Genero</th>
                <td>{{ user.genero }}</td>
            </tr>
            <tr>
                <th>Fecha_nacimiento</th>
                <td>{{ user.fechaNacimiento }}</td>
            </tr>
            <tr>
                <th>Vive_palmilla</th>
                <td>{{ user.vivePalmilla ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ user.role }}</td>
            </tr>
            <tr>
                <th>Creado_en</th>
                <td>{{ user.creadoEn ? user.creadoEn|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Actualizado_en</th>
                <td>{{ user.actualizadoEn ? user.actualizadoEn|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Telefono</th>
                <td>{{ user.telefono }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}">back to list</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
